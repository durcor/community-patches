+
+      if (aspects & VK_IMAGE_ASPECT_STENCIL_BIT)
+         util_format_unpack_s_8uint(pres->format, &stencil, data, 1);
+
+      if (!needs_rp && !batch->rp)
+         clear_zs_no_rp(batch, res, aspects, depth, stencil, level, box->z, box->depth);
+      else {
+         unsigned flags = 0;
